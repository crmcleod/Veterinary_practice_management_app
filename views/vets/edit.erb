<h2>Edit <%= @animal.name %></h2>
<form method="POST" action="/animals/<%=@animal.id%>/edit_vet">
    <ul>    
    <li> Name: <%= @animal.name %> </li>
                <input id="owner" type="hidden" name="owner_name" value="<%=@animal.owner_name%>">
                <input id="owner-number" type="hidden" name="owner_phone_number" value="<%=@animal.owner_phone_number%>">
                <input id="behavioural-notes" type="hidden" name="treatment_note" value="<%=@animal.treatment_note%>">
    
        <li>
            <label for="vet-select">Vet: </label>
            <select name="vet_id" id="vet-select" selected="<%=@animal.vet_id%>">
                <% @vets.each do |vet| %>
                    <% if vet.id == @animal.vet_id %>
                        <option value=<%=vet.id%> selected><%=vet.name%> (Registered animals: <%=vet.count_animals%>)</option>
                    <% else %>
                        <option value=<%=vet.id%>><%=vet.name%> (Registered animals: <%=vet.count_animals%>)</option>
                    <%end%>
                <%end%>
            </select>
        </li>
            <input type="submit" value="Confirm new vet">
        
    </ul>
</form>
